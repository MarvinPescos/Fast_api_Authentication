# BalanceHub Backend Environment Configuration
# Copy this file to .env in the backend/ directory and fill in your values

# Database Settings
DB_USER=postgres
DB_PASS=your_database_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=BalanceHub_testDB

# JWT Settings (SECRET_KEY must be 32+ characters)
SECRET_KEY=your_super_secret_jwt_key_32_characters_minimum_replace_this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# App Settings
APP_NAME=BalanceHub
DEBUG=False
FRONTEND_URL=http://localhost:5173

# Email Settings (Get these from SendGrid)
MAIL_FROM=your-verified-email@domain.com
MAIL_FROM_NAME=BalanceHub
SENDGRID_API_KEY=SG.your_sendgrid_api_key

# Redis Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# Monitoring (Get DSN from Sentry.io)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Email Verification
EMAIL_VERIFICATION_CODE_EXPIRY_MINUTES=15

FACEBOOK_CLIENT_ID=your_facebook_app_id
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret
FACEBOOK_REDIRECT_URI=http://localhost:8000/auth/facebook/callback